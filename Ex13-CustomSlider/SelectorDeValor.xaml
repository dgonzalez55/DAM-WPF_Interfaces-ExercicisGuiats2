<UserControl x:Class="Ex13_CustomSlider.SelectorDeValor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ex13_CustomSlider"
             mc:Ignorable="d">
    <StackPanel>
        <!-- Slider per seleccionar el valor -->
        <Slider x:Name="SliderControl" Minimum="0" Maximum="100" TickFrequency="1" ValueChanged="SliderControl_ValueChanged" />

        <!-- TextBox per mostrar i editar el valor -->
        <TextBox x:Name="TextBoxValor" Width="50" HorizontalAlignment="Center" TextAlignment="Center"
                 TextChanged="TextBoxValor_TextChanged" />
    </StackPanel>
</UserControl>
